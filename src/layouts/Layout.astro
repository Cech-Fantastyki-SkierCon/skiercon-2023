---
import Rollbar from 'rollbar'
import Nav from './Nav.astro'
import Footer from './Footer.astro'
import Cookies from '@components/Cookies.astro'
import EventSchema from '@components/schema/EventSchema.astro'
import { api } from 'src/api'
import { getGitRevision } from 'src/utils'

export interface Props {
  title: string
  description: string
  fullWidth?: boolean
  hideFooter?:  boolean
}

const gitRevision = getGitRevision()

if (import.meta.env.SECRET_ROLLBAR) {
   new Rollbar({
    accessToken: import.meta.env.SECRET_ROLLBAR,
    captureUncaught: true,
    captureUnhandledRejections: true,
    payload: {
      environment: import.meta.env.MODE,
      client: {
        javascript: {
          code_version: gitRevision,
        }
      }
    }
  })
}

const { data: programSpeakers } = await api.programSpeakers.allProfiles({guests: true})
const guests = programSpeakers.filter(speaker => speaker.guest)
const { title, description, fullWidth, hideFooter } = Astro.props
---

