---
import { api } from 'src/api'
import { TimelineComponent } from '@components/timeline/Timeline.tsx'

const [events, places] = await Promise.all([
  api.programEvents.allPublic().then(res => res.data),
  api.programPlaces.all().then(res => res.data),
])
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Audiowide&family=Lato:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <TimelineComponent client:only="react" events={events} places={places} />
  </body>
</html>

<style is:global lang="scss">
  body {
    font-family: 'Audiowide', cursive;
    font-family: 'Lato', sans-serif;
    background: #212b49;
  }
  #container {
    margin-top: 47px !important;
    // margin-bottom: -86px !important;
  }

  .vis-timeline {
    border: 1px solid transparent !important;
  }

  // Text color
  .vis-group-level-0,
  .vis-time-axis .vis-text {
    color: white !important;
  }

  // Grid color
  .vis-label,
  .vis-foreground .vis-group,
  .vis-time-axis .vis-grid.vis-minor {
    border-color: rgb(56, 72, 117) !important;
  }

  .vis-panel.vis-center,
  .vis-panel.vis-center,
  .vis-panel.vis-left,
  .vis-panel.vis-right,
  .vis-panel.vis-top,
  .vis-panel.vis-bottom {
    border-color: rgb(56, 72, 117) !important;
  }

  .vis-item {
    border: 1px solid rgb(37, 37, 29) !important;
    border-right-width: 2px !important;
    color: white !important;
    background: black !important;
    font-size: 14px !important;
    border-radius: 6px !important;
    overflow: hidden;
    cursor: pointer;
  }

  .vis-item-content {
    padding: 0 !important;
    width: 100%;
  }

  .vis-top {
    position: fixed !important;
    width: 100%;
    z-index: 1;
