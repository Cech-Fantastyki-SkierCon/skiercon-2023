---
import Layout from '../layouts/Layout.astro'
import Widgets from '@components/Widgets.astro'
import { api } from 'src/api'
import { TimelineComponent } from '@components/timeline/Timeline.tsx'

const [events, places] = await Promise.all([
  api.programEvents.allPublic().then(res => res.data),
  api.programPlaces.all().then(res => res.data),
])

places.sort((a, b) => (a.programBlock!.name > b.programBlock!.name ? 1 : -1))
---

<Layout
  title={'Program'}
  description={'Program SkierConu 2023'}
  fullWidth
  hideFooter
>
  <TimelineComponent client:only="react" events={events} places={places} />
</Layout>

<style is:global lang="scss">
  #container {
    margin-top: 83px !important;
    margin-bottom: -86px !important;
  }

  .vis-timeline {
    border: 1px solid transparent !important;
  }

  // Text color
  .vis-group-level-0,
  .vis-time-axis .vis-text {
    color: rgb(209, 209, 209) !important;
  }

  // Grid color
  .vis-label,
  .vis-foreground .vis-group,
  .vis-time-axis .vis-grid.vis-minor {
    border-color: rgb(54, 54, 54) !important;
  }

  .vis-panel.vis-center,
  .vis-panel.vis-center,
  .vis-panel.vis-left,
  .vis-panel.vis-right,
  .vis-panel.vis-top,
  .vis-panel.vis-bottom {
    border-color: rgb(73, 73, 73) !important;
  }

  .vis-item {
    border: 1px solid rgb(37, 37, 29) !important;
    border-right-width: 2px !important;
    color: white !important;
    background: black !important;
    font-size: 14px !important;
    border-radius: 6px !important;
    overflow: hidden;
    cursor: pointer;
  }

  .vis-item-content {
    padding: 0 !important;
    width: 100%;
  }

  .vis-top {
    position: fixed !important;
    width: 100%;
    z-index: 1;
    top: auto !important;
    bottom: 0px !important;
    transform: translateX(1px);
    background: #1e1e1e;
    margin-top: -20px !important;

    .vis-text {
    }
  }
</style>
