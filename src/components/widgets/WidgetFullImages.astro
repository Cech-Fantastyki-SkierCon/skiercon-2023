---
import type { WidgetFullImages } from 'src/__gen-api'
export interface Props {
  widget: WidgetFullImages
}

const widget = Astro.props.widget
---

{
  widget.images.map(image => {
    return (
      <img
        src={image.url}
        alt={image.alt}
        width={image.meta.width}
        height={image.meta.height}
        class="w-full"
        loading="lazy"
      />
    )
  })
}
