  @import '../style/fonts.scss';
  @import 'wysiwyg.css';

  .body {
    font-family: 'Poppins', sans-serif;
    line-height: 1.4;
    overflow-y: scroll
  }

  .main {
    min-height: calc(100vh - 564px);
  }

  .wysiwyg {
    a {
      color: #23bdd8;

      &[target='_blank']::after {
        content: ' ↗';
      }
    }
  }

  .required {
    @apply text-red-500;
  }

